<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/dashboard.css">
    <title>DASHBOARD</title>
</head>

<body>
    <main class="main">
        <header class="nunito">
            <div class="contenedor-logo">
                <img src="../resources/img/imagen_logo_circular.webp" alt="logo_circular" class="contenedor-logo-img">
                <h1 class="contenedor-logo-h1">JustPickIt</h1>
            </div>
            <nav class="nav">
                <ul class="nav-menu">
                    <li class="nav-menu-item">
                        <a href="/" class="nav-menu-link">Dashboard</a>
                    </li>
                    <li class="nav-menu-item">
                        <a href="alta" class="nav-menu-link">Alta</a>
                    </li>
                    <li class="nav-menu-item">
                        <a href="baja" class="nav-menu-link">Baja</a>
                    </li>
                    <li class="nav-menu-item">
                        <a href="modificacion" class="nav-menu-link">Modificacion</a>
                    </li>
                </ul>
            </nav>
        </header>
    </main>

    <h1>Detalles de la Zapatilla</h1>
    <ul>
        <% zapatillas.forEach(z=> { %>
            <li>
                <h2>
                    <%= z.name %>
                </h2>
                <p>Estilo: <%= z.type %>
                </p>
                <p>Color: <%= z.color %></p>
                <% if (Array.isArray(z.talles)) { %>
                    <p>Talles: <%= z.sizes.join(",") %></p>
                <% } else { %>
                    <p>Talles: No disponibles</p>
                <% } %>

                <p>Precio: $<%= z.price %></p>

                <img src=" /img/<%=z.image %>" alt="<%= z.name %>" width="200"/>

                <p><a href="<%= z.link %>" target="_blank">Ver m√°s</a></p>
            </li>
            <% }); %>
    </ul>

</body>

</html>